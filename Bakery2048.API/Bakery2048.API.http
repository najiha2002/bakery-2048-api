@Bakery2048_API_HostAddress = http://localhost:5130
@token = your_token_here
@playerId = b793f707-7ebe-4e68-bee6-72133b128b24
@tileId = your_tile_id_here

#######################################
# AUTH ENDPOINTS
#######################################

### Register a new user
POST {{Bakery2048_API_HostAddress}}/api/auth/register
Content-Type: application/json

{
  "username": "testuser",
  "email": "test@example.com",
  "password": "Password123!"
}

### Login
POST {{Bakery2048_API_HostAddress}}/api/auth/login
Content-Type: application/json

{
  "username": "testuser",
  "password": "Password123!"
}

#######################################
# PLAYER ENDPOINTS
#######################################

### Get all players
GET {{Bakery2048_API_HostAddress}}/api/players
Authorization: Bearer {{token}}

### Get top N players (e.g., top 10)
GET {{Bakery2048_API_HostAddress}}/api/players?top=10
Authorization: Bearer {{token}}

### Get player by ID
GET {{Bakery2048_API_HostAddress}}/api/players/{{playerId}}
Authorization: Bearer {{token}}

### Update player
PUT {{Bakery2048_API_HostAddress}}/api/players/{{playerId}}
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "highestScore": 7236,
  "currentScore": 4800,
  "bestTileAchieved": 512,
  "gamesPlayed": 6,
  "winStreak": 5
}

### Delete player (Admin only)
DELETE {{Bakery2048_API_HostAddress}}/api/players/{{playerId}}
Authorization: Bearer {{token}}

#######################################
# TILE ENDPOINTS
#######################################

### Get all tiles
GET {{Bakery2048_API_HostAddress}}/api/tiles
Authorization: Bearer {{token}}

### Get tile by ID
GET {{Bakery2048_API_HostAddress}}/api/tiles/{{tileId}}
Authorization: Bearer {{token}}

### Create new tile (Admin only)
POST {{Bakery2048_API_HostAddress}}/api/tiles
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "itemName": "Croissant",
  "tileValue": 1024,
  "color": "#FFD700",
  "icon": "ü•ê"
}

### Update tile (Admin only)
PUT {{Bakery2048_API_HostAddress}}/api/tiles/{{tileId}}
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "itemName": "Golden Croissant",
  "tileValue": 1024,
  "color": "#FFD700",
  "icon": "ü•ê"
}

### Delete tile (Admin only)
DELETE {{Bakery2048_API_HostAddress}}/api/tiles/{{tileId}}
Authorization: Bearer {{token}}
